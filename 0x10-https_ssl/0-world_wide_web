#!/usr/bin/env bash
# Checks for domain and subdomain

# Function to display information about a subdomain
display_info() {
    local domain="$1"
    local subdomain="$2"
    local record_type="$3"
    local destination="$4"

    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main function
main() {
    local domain="$1"
    local subdomain="$2"

    # Default subdomains to check
    subdomains=("www" "lb-01" "web-01" "web-02")

    # If subdomain parameter is provided, use only that subdomain
    if [ -n "$subdomain" ]; then
        subdomains=("$subdomain")
    fi

    # Iterate over subdomains and display information
    for sub in "${subdomains[@]}"; do
        # Use dig command to retrieve DNS information
        result=$(dig +short "$sub.$domain")

        # Extract record type and destination IP
        record_type=$(echo "$result" | awk 'NR==1 {print $4}')
        destination=$(echo "$result" | awk 'NR==2')

        # Display information
        display_info "$domain" "$sub" "$record_type" "$destination"
    done
}

# Check if domain argument is provided
if [ -z "$1" ]; then
    echo "Error: Missing domain argument."
    exit 1
fi

# Call main function with provided arguments
main "$@"
