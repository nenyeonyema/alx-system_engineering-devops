#!/usr/bin/env bash

# Check if the script is run with sudo
if [ "$EUID" -ne 0 ]; then
    echo "Please run this script with sudo."
    exit 1
fi

# Update package lists
apt-get update

# Install Nginx
apt-get install -y nginx

# Check if Nginx service is running, start if not
if ! /etc/init.d/nginx status > /dev/null 2>&1; then
    /etc/init.d/nginx start
fi

# Check if Nginx is listening on port 80, configure if not
if ! netstat -tuln | grep -q ":80 "; then
    sed -i 's/listen\ 80;/listen\ 80\ default_server;/g' /etc/nginx/sites-available/default
    /etc/init.d/nginx restart
fi

# Configure Nginx redirection
redirect_config="/etc/nginx/sites-available/redirect"

cat <<EOF > "$redirect_config"
server {
    listen 80;
    listen [::]:80;

    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Redirect other requests to the default Nginx welcome page
    location / {
        return 301 \$scheme://\$host;
    }
}
EOF

# Enable the redirection site
ln -s "$redirect_config" /etc/nginx/sites-enabled/

# Test Nginx configuration
nginx -t

# Restart Nginx to apply changes
/etc/init.d/nginx restart

# Create index.html file with "Hello World!"
index_html="/var/www/html/index.html"
if [ ! -f "$index_html" ]; then
    echo "Hello World!" > "$index_html"
fi

# Ensure proper permissions for index.html
chown www-data:www-data "$index_html"
chmod 644 "$index_html"

# Display success message
echo "Nginx installed, configured, and redirection set successfully."
